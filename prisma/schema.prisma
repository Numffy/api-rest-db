generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Appointment {
  id                  String        @id @default(uuid())
  cc                  String
  identification_type String
  name                String
  last_name           String
  email               String
  phone               Int
  date                DateTime
  user                User          @relation(fields: [cc], references: [cc])
  documentType        DocumentType  @relation(fields: [identification_type], references: [name])
  typeOfConsultId     String
  typeOfConsult       TypeOfConsult @relation(fields: [typeOfConsultId], references: [id])
  hourId              String
  hour AppointmentHours @relation(fields: [hourId], references: [id])
}

model AppointmentHours {
  id    String @id @default(uuid())
  value String
  appointments Appointment[]
}

model DocumentType {
  id           String        @id
  name         String        @unique
  appointments Appointment[]
}

model TypeOfConsult {
  id           String        @id
  name         String        @unique
  appointments Appointment[]
}

model User {
  cc           String        @id
  email        String        @unique
  password     String
  name         String
  last_name    String
  appointments Appointment[]
  roleId       String        @default("2")
  role         Role          @relation(fields: [roleId], references: [id])
}

model Role {
  id    String @id
  name  String @unique
  users User[]
}
